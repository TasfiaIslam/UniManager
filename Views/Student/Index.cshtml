@model IEnumerable<Student>

@{

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Students</title>
    <link href="~/css/studentIndex.css" rel="stylesheet" />
</head>
<body>
    <h1>Students</h1>
    <div class="row">
        <div class="col-8">
            <a asp-action="Create"><button class="btn btn-primary" style="width:auto">Add Students</button></a>
            <p id="totalStudents" class="mt-3">Total Students: @ViewBag.Total</p>
            <form asp-action="Index" method="post">
                <label class="mt-3">Search Student</label>
                <div class="row input-group">
                    <input type="text" name="search" id="searchInput" class="form-control col-xs-2 col-sm-4 col-lg-4 col-md-4" />
                </div>
                <div class="input-group-btn mt-3">
                    <input type="submit" value="search" class="btn btn-primary" />
                </div>
            </form>
            <form asp-action="OrderStudentsByName" method="post">
                <div class="input-group-btn mt-3">
                    <input type="submit" value="Order Students" class="btn btn-primary" />
                </div>
            </form>
            <form asp-action="GroupByDepartment" method="post">
                <div class="input-group-btn mt-3">
                    <input type="submit" value="Group by Departments" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <div class="row">
        <table class="table mt-3">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Reg No</th>
                    <th>Address</th>
                    <th>Department</th>
                    <th>Update</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var student in Model)
                {
                    <tr>
                        <td>@student.StudentId</td>
                        <td>@student.Name</td>
                        <td>@student.RegNumber</td>
                        <td>@student.Address</td>
                        <td>@student.DeptId</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@student.StudentId"><button class="btn btn-info">Edit</button></a>
                            <a asp-action="Details" asp-route-id="@student.StudentId"><button class="btn btn-primary">Details</button></a>
                            <a asp-action="Delete" asp-route-id="@student.StudentId"><button class="btn btn-danger">Delete</button></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
