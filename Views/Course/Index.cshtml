@model IEnumerable<Course>

@{

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Course</title>
    <link href="~/css/courseIndex.css" rel="stylesheet" />
</head>
<body>
    <h1>Courses</h1>
    <div class="row">
        <div class="col-8">
            <a asp-action="Create"><button class="btn btn-primary" style="width:auto">Add Courses</button></a>
            <p id="totalStudents" class="mt-3">Total Courses: @ViewBag.Total</p>
            <form asp-action="Index" method="post">
                <label>Course Name</label>
                <div class="row input-group">
                    <input type="text" name="searchName" id="searchInput" class="form-control col-xs-2 col-sm-4 col-lg-4 col-md-4" />
                </div>
                <label>Credit</label>
                <div class="row input-group">
                    <input type="text" name="searchCredit" id="searchInput" class="form-control col-xs-2 col-sm-4 col-lg-4 col-md-4" />
                </div>
                <div class="input-group-btn mt-3">
                    <input type="submit" value="Filter" class="btn btn-primary" />
                </div>
            </form>
            <form asp-action="GroupByDepartment" method="post">
                <div class="input-group-btn mt-3">
                    <input type="submit" value="Group by Departments" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
    <div class="row">
        <table class="table mt-3">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Credit</th>
                    <th>Department</th>
                    <th>Update</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var course in Model)
                {
                    <tr>
                        <td>@course.CourseId</td>
                        <td>@course.Name</td>
                        <td>@course.Credit</td>
                        <td>@course.DeptId</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@course.CourseId"><button class="btn btn-info">Edit</button></a>
                            <a asp-action="Details" asp-route-id="@course.CourseId"><button class="btn btn-primary">Details</button></a>
                            <a asp-action="Delete" asp-route-id="@course.CourseId"><button class="btn btn-danger">Delete</button></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
