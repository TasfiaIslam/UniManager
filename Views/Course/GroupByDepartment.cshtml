@model IEnumerable<IGrouping<int, Course>>

@{

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Courses</title>
    <link href="~/css/courseIndex.css" rel="stylesheet" />
</head>
<body>
    <h1>Courses By Department</h1>
    <div class="row">
        @foreach (var group in Model)
        {
            <p>Department - @group.Key</p> <br />
            <p>Total courses in this department - @group.Count()</p>
            <table class="table mt-3">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Name</th>
                        <th>Credit</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var courses in group)
                    {
                        <tr>
                            <td>@courses.CourseId</td>
                            <td>@courses.Name</td>
                            <td>@courses.CourseId</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</body>
</html>