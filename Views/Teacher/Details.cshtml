@model TeacherDetailsViewModel

@{
    ViewBag.Title = "Teacher Details";
}

<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.Teacher.Name</h1>
            </div>

            <div class="card-body text-center">
                <h4>Teacher ID : @Model.Teacher.TeacherId</h4>
                <h4>Address : @Model.Teacher.Address</h4>
                <h4>Department : @Model.Teacher.DeptId</h4>
            </div>
            <div class="card-footer text-center">
                <a asp-controller="Teacher" asp-action="Index" class="btn btn-primary">Back</a>
                <a asp-controller="Teacher" asp-action="Edit" asp-route-id="@Model.Teacher.TeacherId" class="btn btn-primary">Edit</a>
                <a href="#" class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/CustomScript.js"></script>
}