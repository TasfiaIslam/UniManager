@model AddTeacherCourseViewModel

@{
    
}

<h1>AddCourse</h1>
<form asp-controller="Teacher" asp-action="AddCourse" method="post">
    <div class="form-group">
        <label asp-for="CourseId"></label>
        <select asp-for="CourseId" asp-items="Model.Courses"></select>
        <span asp-validation-for="CourseId"></span>
    </div>

    <div class="form-group">
        <label asp-for="TeacherId"></label>
        <input type="text" name="TeacherId" value="@Model.TeacherId" asp-for="TeacherId" />
    </div>

    <input type="submit" value="Add Course" />
</form>

